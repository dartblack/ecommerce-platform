  "info": {
    "title": "Ecommerce-Platform Backend API",
    "description": "",
    "version": "1.0.5",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "securitySchemes": {
      "access-token": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "description": "User email address",
            "example": "admin@example.com"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "description": "User password",
            "example": "password123"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "UserDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "example": "john@example.com"
          },
          "role": {
            "type": "string",
            "example": "admin"
          }
        },
        "required": [
          "id",
          "name",
          "email",
          "role"
        ]
      },
      "LoginResponseDataDto": {
        "type": "object",
        "properties": {
          "user": {
            "$ref": "#/components/schemas/UserDto"
          },
          "token": {
            "type": "string"
          },
          "tokenType": {
            "type": "string",
            "example": "Bearer"
          }
        },
        "required": [
          "user",
          "token",
          "tokenType"
        ]
      },
      "LoginResponseDto": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "Login successful"
          },
          "data": {
            "$ref": "#/components/schemas/LoginResponseDataDto"
          }
        },
        "required": [
          "success",
          "message",
          "data"
        ]
      },
      "ProductDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "Laptop Pro 15"
          },
          "slug": {
            "type": "string",
            "example": "laptop-pro-15"
          },
          "description": {
            "type": "string",
            "example": "High-performance laptop..."
          },
          "shortDescription": {
            "type": "string",
            "example": "Powerful laptop for professionals"
          },
          "sku": {
            "type": "string",
            "example": "LAPTOP-001"
          },
          "price": {
            "type": "number",
            "example": 1299.99
          },
          "compareAtPrice": {
            "type": "number",
            "example": 1499.99
          },
          "categoryId": {
            "type": "number",
            "example": 1
          },
          "categoryName": {
            "type": "string",
            "example": "Electronics"
          },
          "stockQuantity": {
            "type": "number",
            "example": 50
          },
          "stockStatus": {
            "type": "string",
            "example": "in_stock",
            "enum": [
              "in_stock",
              "out_of_stock",
              "on_backorder"
            ]
          },
          "isActive": {
            "type": "boolean",
            "example": true
          },
          "image": {
            "type": "string",
            "example": "product-image.jpg"
          },
          "imageUrl": {
            "type": "string",
            "example": "http://example.com/image.jpg"
          },
          "sortOrder": {
            "type": "number",
            "example": 0
          },
          "createdAt": {
            "type": "string",
            "example": "2024-01-01T00:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "example": "2024-01-01T00:00:00.000Z"
          }
        },
        "required": [
          "id",
          "name",
          "slug",
          "sku",
          "price",
          "stockQuantity",
          "stockStatus",
          "isActive",
          "sortOrder",
          "createdAt",
          "updatedAt"
        ]
      },
      "PaginationMetaDto": {
        "type": "object",
        "properties": {
          "page": {
            "type": "number",
            "example": 1
          },
          "limit": {
            "type": "number",
            "example": 20
          },
          "total": {
            "type": "number",
            "example": 100
          },
          "totalPages": {
            "type": "number",
            "example": 5
          },
          "hasNext": {
            "type": "boolean",
            "example": true
          },
          "hasPrev": {
            "type": "boolean",
            "example": false
          }
        },
        "required": [
          "page",
          "limit",
          "total",
          "totalPages",
          "hasNext",
          "hasPrev"
        ]
      },
      "ProductListResponseDto": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProductDto"
            }
          },
          "meta": {
            "$ref": "#/components/schemas/PaginationMetaDto"
          }
        },
        "required": [
          "data",
          "meta"
        ]
      },
      "CreateProductDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 255,
            "example": "Laptop Pro 15",
            "description": "Product name"
          },
          "slug": {
            "type": "string",
            "maxLength": 255,
            "example": "laptop-pro-15",
            "description": "Product slug (auto-generated if not provided)"
          },
          "description": {
            "type": "string",
            "example": "High-performance laptop...",
            "description": "Full product description"
          },
          "shortDescription": {
            "type": "string",
            "maxLength": 500,
            "example": "Powerful laptop for professionals",
            "description": "Short product description"
          },
          "sku": {
            "type": "string",
            "maxLength": 255,
            "description": "Product SKU"
          },
          "price": {
            "type": "number",
            "minimum": 0,
            "description": "Product price"
          },
          "compareAtPrice": {
            "type": "number",
            "minimum": 0,
            "description": "Compare at price (original price)"
          },
          "categoryId": {
            "type": "number",
            "description": "Category ID"
          },
          "stockQuantity": {
            "type": "number",
            "minimum": 0,
            "description": "Stock quantity"
          },
          "stockStatus": {
            "enum": [
              "in_stock",
              "out_of_stock",
              "on_backorder"
            ],
            "type": "string",
            "example": "in_stock",
            "description": "Stock status"
          },
          "isActive": {
            "type": "boolean",
            "description": "Is product active"
          },
          "image": {
            "type": "string",
            "format": "binary",
            "description": "Product image file (jpeg, png, jpg, gif, webp, max 2MB)"
          },
          "sortOrder": {
            "type": "number",
            "minimum": 0,
            "description": "Sort order"
          }
        },
        "required": [
          "name",
          "sku",
          "price"
        ]
      },
      "UpdateProductDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 255,
            "example": "Laptop Pro 15",
            "description": "Product name"
          },
          "slug": {
            "type": "string",
            "maxLength": 255,
            "example": "laptop-pro-15",
            "description": "Product slug"
          },
          "description": {
            "type": "string",
            "example": "High-performance laptop...",
            "description": "Full product description"
          },
          "shortDescription": {
            "type": "string",
            "maxLength": 500,
            "example": "Powerful laptop for professionals",
            "description": "Short product description"
          },
          "sku": {
            "type": "string",
            "maxLength": 255,
            "example": "LAPTOP-001",
            "description": "Product SKU"
          },
          "price": {
            "type": "number",
            "minimum": 0,
            "example": 1299.99,
            "description": "Product price"
          },
          "compareAtPrice": {
            "type": "number",
            "minimum": 0,
            "example": 1499.99,
            "description": "Compare at price (original price)"
          },
          "categoryId": {
            "type": "number",
            "example": 1,
            "description": "Category ID"
          },
          "stockQuantity": {
            "type": "number",
            "minimum": 0,
            "example": 50,
            "description": "Stock quantity"
          },
          "stockStatus": {
            "enum": [
              "in_stock",
              "out_of_stock",
              "on_backorder"
            ],
            "type": "string",
            "example": "in_stock",
            "description": "Stock status"
          },
          "isActive": {
            "type": "boolean",
            "example": true,
            "description": "Is product active"
          },
          "sortOrder": {
            "type": "number",
            "minimum": 0,
            "example": 0,
            "description": "Sort order"
          },
          "image": {
            "type": "string",
            "format": "binary",
            "description": "Product image file (jpeg, png, jpg, gif, webp, max 2MB)"
          }
        }
      },
      "OrderItemDto": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "number",
            "minimum": 1,
            "example": 1,
            "description": "Product ID"
          },
          "quantity": {
            "type": "number",
            "minimum": 1,
            "example": 2,
            "description": "Quantity of the product"
          }
        },
        "required": [
          "productId",
          "quantity"
        ]
      },
      "ShippingAddressDto": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "maxLength": 100,
            "example": "John",
            "description": "First name"
          },
          "lastName": {
            "type": "string",
            "maxLength": 100,
            "example": "Doe",
            "description": "Last name"
          },
          "email": {
            "type": "string",
            "maxLength": 255,
            "format": "email",
            "example": "john.doe@example.com",
            "description": "Email address"
          },
          "phone": {
            "type": "string",
            "maxLength": 20,
            "example": "+1234567890",
            "description": "Phone number"
          },
          "addressLine1": {
            "type": "string",
            "maxLength": 255,
            "example": "123 Main St",
            "description": "Address line 1"
          },
          "addressLine2": {
            "type": "string",
            "maxLength": 255,
            "example": "Apt 4B",
            "description": "Address line 2"
          },
          "city": {
            "type": "string",
            "maxLength": 100,
            "example": "New York",
            "description": "City"
          },
          "state": {
            "type": "string",
            "maxLength": 100,
            "example": "NY",
            "description": "State or province"
          },
          "postalCode": {
            "type": "string",
            "maxLength": 20,
            "example": "10001",
            "description": "Postal code"
          },
          "country": {
            "type": "string",
            "maxLength": 100,
            "example": "United States",
            "description": "Country"
          }
        },
        "required": [
          "firstName",
          "lastName",
          "email",
          "addressLine1",
          "city",
          "postalCode",
          "country"
        ]
      },
      "PaymentDetailsDto": {
        "type": "object",
        "properties": {
          "cardNumber": {
            "type": "string",
            "pattern": "/^[\\d\\s]{13,19}$/",
            "example": "4111111111111111",
